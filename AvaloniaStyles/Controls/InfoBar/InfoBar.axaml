  <Style Selector="InfoBar:closehidden /template/ Button#CloseButton">
    <Setter Property="IsVisible" Value="False" />
  </Style>

  <!-- Visible -->
  <Style Selector="InfoBar:hidden /template/ Border#ContentRoot">
    <Setter Property="IsVisible" Value="False" />
  </Style>

  <Style Selector="InfoBar:foregroundset /template/ TextBlock#Title">
    <Setter Property="Foreground" Value="{TemplateBinding Foreground}" />
  </Style>
  <Style Selector="InfoBar:foregroundset /template/ TextBlock#Message">
    <Setter Property="Foreground" Value="{TemplateBinding Foreground}" />
  </Style>
