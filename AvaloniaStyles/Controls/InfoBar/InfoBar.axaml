  <Style Selector="InfoBar:standardIcon /template/ Panel#StandardIconArea">
    <Setter Property="IsVisible" Value="True" />
  </Style>
  <Style Selector="InfoBar:standardIcon /template/ Viewbox#UserIconBox">
